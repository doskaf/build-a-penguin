<h1>Edit Your Penguin</h1>

<%= "Each field must have a value" if @penguin && @penguin.errors.any? %>
<form action="/penguins/<%= @penguin.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <p>
    <label for="name">Name:</label><br>
    <input type="text" id="name" name="name" value="<%= @penguin.name %>"><br>
    <br>
    <label for="color">Color:</label><br>
    <input type="text" id="color" name="color" value="<%= @penguin.color %>"><br>
    <br>
    <label for="headwear">Headwear:</label><br>
    <input type="text" id="headwear" name="headwear" value="<%= @penguin.headwear %>"><br>
    <br>
    <label for="clothing">Clothing:</label><br>
    <input type="text" id="clothing" name="clothing" value="<%= @penguin.clothing %>"><br>
    </p>
    <br>
    <input type="submit" value="Submit">
</form>