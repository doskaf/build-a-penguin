<h1>Create A Penguin</h1>

<%= "Each field must have a value" if @penguin && @penguin.errors.any? %>
<form action="/penguins" method="POST">
    <p>
    <label for="name">Name:</label><br>
    <input type="text" id="name" name="name"><br>
    <br>
    <label for="color">Color:</label><br>
    <select name="color" id="color">
        <option value="Black">Black</option>
        <option value="Blue">Blue</option>
        <option value="Green">Green</option>
        <option value="Pink">Pink</option>
        <option value="Yellow">Yellow</option>
    </select><br>
    <br>
    <label for="headwear">Headwear:</label><br>
    <select name="headwear" id="headwear">
        <option value="Beanie">Beanie</option>
        <option value="Cowboy Hat">Cowboy Hat</option>
        <option value="Monocle">Monocle</option>
        <option value="Sunglasses">Sunglasses</option>
        <option value="Tophat">Tophat</option>
    </select><br>
    <br>
    <label for="clothing">Clothing:</label><br>
    <select name="clothing" id="clothing">
        <option value="Scarf">Scarf</option>
        <option value="Bandana">Bandana</option>
        <option value="Vest">Vest</option>
        <option value="Hoodie">Hoodie</option>
        <option value="Bowtie">Bowtie</option>
    </select><br>
    <br>
    <input type="submit" value="Submit">
</form>